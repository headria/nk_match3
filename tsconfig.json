{
  "compilerOptions": {
    "outFile": "./modules/index.js",
    "typeRoots": ["./node_modules"],
    "rootDir": "./src",
    "target": "ESNext",

    "module": "System",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
